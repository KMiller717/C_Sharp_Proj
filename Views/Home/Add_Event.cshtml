@model Wedding

<a href="/Success">Go Back to Dashboard</a>
<a href="/logout">Log Out</a>

<h3>Create an Activity</h3>
<form asp-action="Event" method="post" class="col-5">
    <div class="form-group">
    <span asp-validation-for="Title"></span>
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control">
</div>
    <div class="form-group">
    <span asp-validation-for="Date"></span>
    <label asp-for="Date"></label>
    <input asp-for="Date" class="form-control">
</div>
<div class="form-group">
    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control">
</div>
<div class="form-group">
    <span asp-validation-for="Duration"></span>
    <label asp-for="Duration"></label>
    <input asp-for="Duration" class="form-control">
</div>
<div class="form-group">
    <span asp-validation-for="TimeLabel"></span>
    <select asp-for="TimeLabel">
        <option>Hours</option>
        <option>Days</option>
    </select>
</div>
<input type="submit" value="Add Event" class="btn-success">
</form>